@model IEnumerable<K22CNTT3_NguyenVanHuynh_Project2.Models.SAN_PHAM>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mt-3">
            <div class="card w-100">
                <img src="~/images/san_pham/@item.HinhAnh" class="card-img-top" alt="@item.TenSanPham">
                <div class="card-body">
                    <h5 class="card-title">@item.TenSanPham</h5>
                    <p>Giá:<span class="text-danger">@item.DonGia.Value.ToString("#,##0")</span></p>
                    <a href="/NVHCart/AddToCart?ID=@item.ID&TenSanPham=@item.TenSanPham&HinhAnh=@item.HinhAnh&SoLuongMua=1&Đonia=@item.DonGia"
                       class="btn btn-primary">Mua Hàng</a>
                </div>
            </div>
        </div>
    }

</div>